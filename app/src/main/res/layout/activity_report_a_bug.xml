<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#272523"
    tools:context=".Contactus">


    <TextView
        android:id="@+id/textView16"
        android:layout_width="405dp"
        android:layout_height="47dp"
        android:layout_marginTop="44dp"
        android:paddingRight="15dp"
        android:gravity="center_horizontal"
        android:text="Report a bug"
        android:textSize="36sp"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="170dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="18dp">
        <RelativeLayout
            android:layout_width="374dp"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/sid"
                android:layout_width="121dp"
                android:layout_height="154dp"
                android:layout_marginEnd="-121dp"
                android:layout_marginRight="-121dp"
                app:srcCompat="@drawable/sid" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="253dp"
                android:layout_height="60dp"
                android:layout_marginLeft="120dp"
                android:gravity="center"
                android:text="Siddharth Patil"
                android:textColor="@android:color/background_light"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="249dp"
                android:layout_height="46dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="+91 8087347255"
                android:textColor="#0661D6"
                android:textSize="21sp" />


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="170dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="18dp">
        <RelativeLayout
            android:layout_width="374dp"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/ritesh"
                android:layout_width="121dp"
                android:layout_height="154dp"
                android:layout_marginEnd="-121dp"
                android:layout_marginRight="-121dp"
                app:srcCompat="@drawable/ritesh" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="253dp"
                android:layout_height="60dp"
                android:layout_marginLeft="120dp"
                android:gravity="center"
                android:text="Ritesh Badaan"
                android:textColor="@android:color/background_light"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="249dp"
                android:layout_height="46dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="+91 9469087466"
                android:textColor="#0661D6"
                android:textSize="21dp" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>